resource "google_firebase_rules_ruleset" "firestore_ruleset" {
  provider = google-beta
  
  files {
    name = "firestore.rules"
    content = <<-RULES
    rules_version = '2';
    service cloud.firestore {
      match /databases/{database}/documents {
        match /{document=**} {
          allow read, write: if false;
        }
      }
    }
    RULES
  }
}

resource "google_firebase_rules_release" "firestore_rules" {
  provider = google-beta
  
  name = "cloud.firestore"
  ruleset_name = google_firebase_rules_ruleset.firestore_ruleset.id
}
